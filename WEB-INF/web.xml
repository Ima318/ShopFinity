         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>sss.jsp</welcome-file> <!-- Change this to your desired file -->
    </welcome-file-list>

    <servlet>
        <servlet-name>ListProductsServlet</servlet-name>
        <servlet-class>com.register.servlet.ListProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductsServlet</servlet-name>
        <url-pattern>/ListProductsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
